<Application x:Class="PoputkeeLite.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PoputkeeLite" 
             xmlns:coreCommon="clr-namespace:PoputkeeLite.Core.Common">

    <Application.Resources>

        <!-- Стиль для кнопок навигации в сайдбаре -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <!-- Внешние отступы -->
            <Setter Property="Padding" Value="15,10"/>
            <!-- Внутренние отступы -->
            <Setter Property="FontSize" Value="14"/>
            <!-- Размер текста -->
            <Setter Property="Background" Value="#F0F0F0"/>
            <!-- Цвет фона -->
            <Setter Property="BorderThickness" Value="0"/>
            <!-- Убираем границу -->
        </Style>

        <Style x:Key="WatermarkStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>

        <coreCommon:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter"/>
        <coreCommon:NotNullConverter x:Key="NotNullConverter"/>

    </Application.Resources>
</Application>
